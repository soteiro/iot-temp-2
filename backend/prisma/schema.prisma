generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DIRECT_DATABASE_URL")  // âœ… Para migraciones en Neon
}


model User {
  user_id    String   @id @default(uuid())
  email      String   @unique @db.VarChar(255)
  password   String   @db.VarChar(255)  // Hasheada
  name       String?  @db.VarChar(100)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  
  // RelaciÃ³n con dispositivos
  devices    Device[]
  
  @@map("users")
}
model Device {
  device_id     String   @id @default(uuid())
  name          String   @db.VarChar(100)
  created_at    DateTime @default(now())
  updated_at    DateTime @updatedAt
  
  // ğŸ” AutenticaciÃ³n
  api_key       String   @unique @db.VarChar(255)  // Key para identificar device
  api_secret    String   @db.VarChar(255)          // Secret hasheado para autenticar
  is_active     Boolean  @default(true)
  last_seen     DateTime?
  
  // ğŸ‘¤ RelaciÃ³n con usuario
  user_id       String?
  user          User?    @relation(fields: [user_id], references: [user_id])
  
  // ğŸ“Š RelaciÃ³n con datos de sensores
  sensorData    SensorData[]
  
  @@map("devices")
}

model SensorData {
  id          Int      @id @default(autoincrement())
  temperature Float
  humidity    Float
  timestamp   DateTime @default(now())
  
  // ğŸ”— RelaciÃ³n con dispositivo
  device_id   String?
  device      Device?  @relation(fields: [device_id], references: [device_id])
  
  // ğŸ“ˆ Ãndices para consultas frecuentes
  @@index([device_id])
  @@index([timestamp])
  @@index([device_id, timestamp])
  @@map("sensor_data")
}