---
import AppLayout from "@/layouts/AppLayout.astro";

// Simulación de datos de configuración del usuario
const userSettings = {
  profile: {
    username: "diego.rodriguez",
    email: "diego@iottemp.com",
    fullName: "Diego Rodríguez",
    avatar: "/avatar-placeholder.jpg",
    role: "Administrador",
    joinDate: "Enero 2024"
  },
  preferences: {
    theme: "system",
    language: "es",
    timezone: "America/Mexico_City",
    dateFormat: "dd/mm/yyyy",
    notifications: {
      email: true,
      push: true,
      sms: false,
      critical: true,
      warnings: true,
      info: false
    }
  },
  alerts: {
    tempThresholds: {
      critical: { min: 5, max: 35 },
      warning: { min: 10, max: 30 }
    },
    humidityThresholds: {
      critical: { min: 20, max: 80 },
      warning: { min: 30, max: 70 }
    },
    responseTime: 300, // seconds
    escalationEnabled: true,
    autoResolve: false
  },
  system: {
    dataRetention: 90, // days
    samplingRate: 60, // seconds
    backup: {
      enabled: true,
      frequency: "daily",
      location: "cloud"
    },
    api: {
      rateLimit: 1000,
      timeout: 30
    }
  }
};
---

<AppLayout title="Configuración">
  <div class="min-h-screen bg-base-200 p-4">
    <!-- Header -->
    <div class="mb-8">
      <div class="flex items-center gap-3 mb-2">
        <div class="w-10 h-10 bg-warning rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-warning-content" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
          </svg>
        </div>
        <div>
          <h1 class="text-3xl font-bold text-base-content">Configuración del Sistema</h1>
          <p class="text-base-content/70">Personaliza tu experiencia y configura el sistema IoT</p>
        </div>
      </div>
      <div class="text-sm breadcrumbs">
        <ul>
          <li><a href="/" class="text-primary">Inicio</a></li>
          <li><a href="/dashboard" class="text-primary">Dashboard</a></li>
          <li class="text-base-content">Configuración</li>
        </ul>
      </div>
    </div>

    <!-- Settings Navigation -->
    <div class="mb-6">
      <div class="tabs tabs-boxed bg-base-100 shadow-lg w-full max-w-2xl">
        <a class="tab tab-active" data-tab="profile">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
          </svg>
          Perfil
        </a>
        <a class="tab" data-tab="preferences">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 100 4m0-4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 100 4m0-4v2m0-6V4"/>
          </svg>
          Preferencias
        </a>
        <a class="tab" data-tab="alerts">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-5 5v-5z"/>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12v5H4l5-5z"/>
          </svg>
          Alertas
        </a>
        <a class="tab" data-tab="system">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
          </svg>
          Sistema
        </a>
        <a class="tab" data-tab="security">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
          </svg>
          Seguridad
        </a>
      </div>
    </div>

    <!-- Profile Tab -->
    <div class="tab-content" id="profile-content">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- Profile Card -->
        <div class="lg:col-span-1">
          <div class="card bg-base-100 shadow-lg border border-base-300">
            <div class="card-body text-center">
              <div class="avatar">
                <div class="w-24 rounded-full ring ring-primary ring-offset-base-100 ring-offset-2">
                  <img src="/api/placeholder/96/96" alt="Avatar" />
                </div>
              </div>
              <h2 class="card-title justify-center mt-4">{userSettings.profile.fullName}</h2>
              <div class="badge badge-primary badge-lg">{userSettings.profile.role}</div>
              <p class="text-base-content/60 mt-2">Miembro desde {userSettings.profile.joinDate}</p>
              <div class="card-actions justify-center mt-4">
                <button class="btn btn-outline btn-sm">Cambiar Avatar</button>
              </div>
            </div>
          </div>
        </div>

        <!-- Profile Form -->
        <div class="lg:col-span-2">
          <div class="card bg-base-100 shadow-lg border border-base-300">
            <div class="card-body">
              <h2 class="card-title mb-6">
                <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                </svg>
                Información Personal
              </h2>
              
              <form class="space-y-6">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                  <div class="form-control">
                    <label class="label">
                      <span class="label-text font-medium">Nombre completo</span>
                    </label>
                    <input type="text" class="input input-bordered" value={userSettings.profile.fullName} />
                  </div>
                  <div class="form-control">
                    <label class="label">
                      <span class="label-text font-medium">Nombre de usuario</span>
                    </label>
                    <input type="text" class="input input-bordered" value={userSettings.profile.username} />
                  </div>
                </div>

                <div class="form-control">
                  <label class="label">
                    <span class="label-text font-medium">Correo electrónico</span>
                  </label>
                  <input type="email" class="input input-bordered" value={userSettings.profile.email} />
                </div>

                <div class="divider">Cambiar Contraseña</div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                  <div class="form-control">
                    <label class="label">
                      <span class="label-text font-medium">Contraseña actual</span>
                    </label>
                    <input type="password" class="input input-bordered" placeholder="••••••••" />
                  </div>
                  <div class="form-control">
                    <label class="label">
                      <span class="label-text font-medium">Nueva contraseña</span>
                    </label>
                    <input type="password" class="input input-bordered" placeholder="••••••••" />
                  </div>
                </div>

                <div class="form-control">
                  <label class="label">
                    <span class="label-text font-medium">Confirmar nueva contraseña</span>
                  </label>
                  <input type="password" class="input input-bordered" placeholder="••••••••" />
                </div>

                <div class="card-actions justify-end">
                  <button type="button" class="btn btn-outline">Cancelar</button>
                  <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Preferences Tab -->
    <div class="tab-content hidden" id="preferences-content">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <!-- UI Preferences -->
        <div class="card bg-base-100 shadow-lg border border-base-300">
          <div class="card-body">
            <h2 class="card-title mb-6">
              <svg class="w-5 h-5 text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zM21 5a2 2 0 00-2-2h-4a2 2 0 00-2 2v12a4 4 0 004 4h4a2 2 0 002-2V5z"/>
              </svg>
              Apariencia e Interfaz
            </h2>
            
            <div class="space-y-6">
              <div class="form-control">
                <label class="label">
                  <span class="label-text font-medium">Tema</span>
                </label>
                <select class="select select-bordered">
                  <option value="system" selected>Sistema (Auto)</option>
                  <option value="light">Claro</option>
                  <option value="dark">Oscuro</option>
                </select>
              </div>

              <div class="form-control">
                <label class="label">
                  <span class="label-text font-medium">Idioma</span>
                </label>
                <select class="select select-bordered">
                  <option value="es" selected>Español</option>
                  <option value="en">English</option>
                  <option value="fr">Français</option>
                </select>
              </div>

              <div class="form-control">
                <label class="label">
                  <span class="label-text font-medium">Zona horaria</span>
                </label>
                <select class="select select-bordered">
                  <option value="America/Mexico_City" selected>México (UTC-6)</option>
                  <option value="America/New_York">New York (UTC-5)</option>
                  <option value="Europe/Madrid">Madrid (UTC+1)</option>
                  <option value="Asia/Tokyo">Tokyo (UTC+9)</option>
                </select>
              </div>

              <div class="form-control">
                <label class="label">
                  <span class="label-text font-medium">Formato de fecha</span>
                </label>
                <select class="select select-bordered">
                  <option value="dd/mm/yyyy" selected>DD/MM/YYYY</option>
                  <option value="mm/dd/yyyy">MM/DD/YYYY</option>
                  <option value="yyyy-mm-dd">YYYY-MM-DD</option>
                </select>
              </div>
            </div>
          </div>
        </div>

        <!-- Notification Preferences -->
        <div class="card bg-base-100 shadow-lg border border-base-300">
          <div class="card-body">
            <h2 class="card-title mb-6">
              <svg class="w-5 h-5 text-info" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-5 5v-5z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12v5H4l5-5z"/>
              </svg>
              Notificaciones
            </h2>

            <div class="space-y-4">
              <!-- Notification Methods -->
              <div>
                <h3 class="font-medium text-base-content mb-3">Métodos de Notificación</h3>
                <div class="space-y-3">
                  <div class="form-control">
                    <label class="label cursor-pointer justify-start gap-3">
                      <input type="checkbox" class="toggle toggle-primary" checked={userSettings.preferences.notifications.email} />
                      <div class="flex items-center gap-2">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                        </svg>
                        <span class="label-text">Notificaciones por email</span>
                      </div>
                    </label>
                  </div>
                  <div class="form-control">
                    <label class="label cursor-pointer justify-start gap-3">
                      <input type="checkbox" class="toggle toggle-primary" checked={userSettings.preferences.notifications.push} />
                      <div class="flex items-center gap-2">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"/>
                        </svg>
                        <span class="label-text">Notificaciones push</span>
                      </div>
                    </label>
                  </div>
                  <div class="form-control">
                    <label class="label cursor-pointer justify-start gap-3">
                      <input type="checkbox" class="toggle toggle-primary" checked={userSettings.preferences.notifications.sms} />
                      <div class="flex items-center gap-2">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
                        </svg>
                        <span class="label-text">Mensajes SMS</span>
                      </div>
                    </label>
                  </div>
                </div>
              </div>

              <div class="divider"></div>

              <!-- Notification Types -->
              <div>
                <h3 class="font-medium text-base-content mb-3">Tipos de Alertas</h3>
                <div class="space-y-3">
                  <div class="form-control">
                    <label class="label cursor-pointer justify-start gap-3">
                      <input type="checkbox" class="toggle toggle-error" checked={userSettings.preferences.notifications.critical} />
                      <span class="label-text">Alertas críticas</span>
                    </label>
                  </div>
                  <div class="form-control">
                    <label class="label cursor-pointer justify-start gap-3">
                      <input type="checkbox" class="toggle toggle-warning" checked={userSettings.preferences.notifications.warnings} />
                      <span class="label-text">Advertencias</span>
                    </label>
                  </div>
                  <div class="form-control">
                    <label class="label cursor-pointer justify-start gap-3">
                      <input type="checkbox" class="toggle toggle-info" checked={userSettings.preferences.notifications.info} />
                      <span class="label-text">Información general</span>
                    </label>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Alerts Tab -->
    <div class="tab-content hidden" id="alerts-content">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <!-- Temperature Thresholds -->
        <div class="card bg-base-100 shadow-lg border border-base-300">
          <div class="card-body">
            <h2 class="card-title mb-6">
              <svg class="w-5 h-5 text-error" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
              </svg>
              Umbrales de Temperatura
            </h2>

            <div class="space-y-6">
              <!-- Critical Thresholds -->
              <div>
                <h3 class="font-medium text-error mb-3">Críticos</h3>
                <div class="grid grid-cols-2 gap-4">
                  <div class="form-control">
                    <label class="label">
                      <span class="label-text text-sm">Mínimo (°C)</span>
                    </label>
                    <input type="number" class="input input-bordered input-sm" value={userSettings.alerts.tempThresholds.critical.min} />
                  </div>
                  <div class="form-control">
                    <label class="label">
                      <span class="label-text text-sm">Máximo (°C)</span>
                    </label>
                    <input type="number" class="input input-bordered input-sm" value={userSettings.alerts.tempThresholds.critical.max} />
                  </div>
                </div>
              </div>

              <!-- Warning Thresholds -->
              <div>
                <h3 class="font-medium text-warning mb-3">Advertencia</h3>
                <div class="grid grid-cols-2 gap-4">
                  <div class="form-control">
                    <label class="label">
                      <span class="label-text text-sm">Mínimo (°C)</span>
                    </label>
                    <input type="number" class="input input-bordered input-sm" value={userSettings.alerts.tempThresholds.warning.min} />
                  </div>
                  <div class="form-control">
                    <label class="label">
                      <span class="label-text text-sm">Máximo (°C)</span>
                    </label>
                    <input type="number" class="input input-bordered input-sm" value={userSettings.alerts.tempThresholds.warning.max} />
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Humidity Thresholds -->
        <div class="card bg-base-100 shadow-lg border border-base-300">
          <div class="card-body">
            <h2 class="card-title mb-6">
              <svg class="w-5 h-5 text-info" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 15a4 4 0 004 4h9a5 5 0 10-.1-9.999 5.002 5.002 0 10-9.78 2.096A4.001 4.001 0 003 15z"/>
              </svg>
              Umbrales de Humedad
            </h2>

            <div class="space-y-6">
              <!-- Critical Humidity -->
              <div>
                <h3 class="font-medium text-error mb-3">Críticos</h3>
                <div class="grid grid-cols-2 gap-4">
                  <div class="form-control">
                    <label class="label">
                      <span class="label-text text-sm">Mínimo (%)</span>
                    </label>
                    <input type="number" class="input input-bordered input-sm" value={userSettings.alerts.humidityThresholds.critical.min} />
                  </div>
                  <div class="form-control">
                    <label class="label">
                      <span class="label-text text-sm">Máximo (%)</span>
                    </label>
                    <input type="number" class="input input-bordered input-sm" value={userSettings.alerts.humidityThresholds.critical.max} />
                  </div>
                </div>
              </div>

              <!-- Warning Humidity -->
              <div>
                <h3 class="font-medium text-warning mb-3">Advertencia</h3>
                <div class="grid grid-cols-2 gap-4">
                  <div class="form-control">
                    <label class="label">
                      <span class="label-text text-sm">Mínimo (%)</span>
                    </label>
                    <input type="number" class="input input-bordered input-sm" value={userSettings.alerts.humidityThresholds.warning.min} />
                  </div>
                  <div class="form-control">
                    <label class="label">
                      <span class="label-text text-sm">Máximo (%)</span>
                    </label>
                    <input type="number" class="input input-bordered input-sm" value={userSettings.alerts.humidityThresholds.warning.max} />
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Alert Behavior -->
        <div class="lg:col-span-2">
          <div class="card bg-base-100 shadow-lg border border-base-300">
            <div class="card-body">
              <h2 class="card-title mb-6">
                <svg class="w-5 h-5 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                Comportamiento de Alertas
              </h2>

              <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <div class="form-control">
                  <label class="label">
                    <span class="label-text font-medium">Tiempo de respuesta (segundos)</span>
                  </label>
                  <input type="number" class="input input-bordered" value={userSettings.alerts.responseTime} />
                  <label class="label">
                    <span class="label-text-alt">Tiempo antes de escalar una alerta</span>
                  </label>
                </div>

                <div class="form-control">
                  <label class="label cursor-pointer justify-start gap-3">
                    <input type="checkbox" class="toggle toggle-primary" checked={userSettings.alerts.escalationEnabled} />
                    <span class="label-text font-medium">Escalación automática</span>
                  </label>
                  <label class="label">
                    <span class="label-text-alt">Escalar alertas no atendidas</span>
                  </label>
                </div>

                <div class="form-control">
                  <label class="label cursor-pointer justify-start gap-3">
                    <input type="checkbox" class="toggle toggle-primary" checked={userSettings.alerts.autoResolve} />
                    <span class="label-text font-medium">Resolución automática</span>
                  </label>
                  <label class="label">
                    <span class="label-text-alt">Resolver cuando vuelva a la normalidad</span>
                  </label>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- System Tab -->
    <div class="tab-content hidden" id="system-content">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <!-- Data Management -->
        <div class="card bg-base-100 shadow-lg border border-base-300">
          <div class="card-body">
            <h2 class="card-title mb-6">
              <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4"/>
              </svg>
              Gestión de Datos
            </h2>

            <div class="space-y-6">
              <div class="form-control">
                <label class="label">
                  <span class="label-text font-medium">Retención de datos (días)</span>
                </label>
                <input type="number" class="input input-bordered" value={userSettings.system.dataRetention} />
                <label class="label">
                  <span class="label-text-alt">Tiempo que se conservan los datos históricos</span>
                </label>
              </div>

              <div class="form-control">
                <label class="label">
                  <span class="label-text font-medium">Frecuencia de muestreo (segundos)</span>
                </label>
                <input type="number" class="input input-bordered" value={userSettings.system.samplingRate} />
